<project name="GATEngine" default="build" basedir=".">
	<description>
      Build file for GAT
    </description>
	<!-- Global properties for GAT -->
	<property name="src" location="src" />
	<property name="tmp" location="tmp" />
	<property name="lib" location="lib" />
	<property name="doc" location="doc" />
	<property name="test" location="test" />
	<property name="java.debug.value" value="true" />
	<property name="external" location="external" />

	<path id="external_jars">
		<fileset dir="${external}">
			<include name="*.jar" />
		</fileset>
	</path>

	<target name="compile" description="compile the source ">
		<mkdir dir="${tmp}" />
		<mkdir dir="${lib}" />

		<!-- Compile the java code from ${src} into ${tmp} -->
		<javac srcdir="${src}" destdir="${tmp}" debug="on" >
			<classpath refid="external_jars" />
		</javac>

		<!-- Put everything in ${tmp} into the GAT.jar file -->
		<jar jarfile="${lib}/GAT.jar" basedir="${tmp}" />

		<!-- Copy external libraries to lib directory -->
		<copy todir="${lib}">
		    <fileset dir="${external}"/>
		</copy>
		
		<delete dir="${tmp}" />
	</target>

	<target name="compile-tests" description="compile the tests">
		<mkdir dir="${tmp}" />

		<!-- Compile the java code from ${test} into ${tmp} -->
		<javac srcdir="${test}" destdir="${tmp}" debug="on" classpath="${lib}/GAT.jar" />

		<!-- Put everything in ${tmp} into the GAT.jar file -->
		<jar jarfile="${lib}/GAT-tests.jar" basedir="${tmp}" />
		<delete dir="${tmp}" />
	</target>

	<target name="build" description="build everything" depends="clean,compile,compile-tests"/>
	
	<target name="javadoc" depends="compile" description="generate javadoc for gat users">
            <javadoc destdir="${doc}" 
        	access="public" use="true" notree="false" nonavbar="false" 
        	noindex="false" splitindex="true" version="true" 
        	nodeprecatedlist="false" nodeprecated="false" 
                verbose="false"
        	classpath="${lib}/GAT.jar">
                <link href="http://java.sun.com/j2se/1.4.2/docs/api/"/>
        	
    		<fileset dir="${src}">
    			<include name="**/*.java" />
    			<exclude name="**/cpi/*" />
    			<exclude name="**/engine/*" />
    			<exclude name="org/gridlab/gat/util/*" />
    			<exclude name="**/FileInputStreamInterface.java" />
    			<exclude name="**/FileOutputStreamInterface.java" />
    		</fileset>
        </javadoc>
    </target>

	<target name="javadoc-devel" depends="compile" description="generate all javadocs">
		<javadoc destdir="${doc}" access="public" packagenames="org.gridlab.*" sourcepath="${src}" overview="src/overview.html">
			<link href="http://java.sun.com/j2se/1.4.2/docs/api/" />
		</javadoc>
	</target>

	<target name="clean" description="clean up">
		<delete dir="${tmp}" />
		<delete dir="${lib}" />
		<delete dir="${doc}" />
	</target>
</project>
