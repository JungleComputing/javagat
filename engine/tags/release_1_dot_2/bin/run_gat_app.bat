@echo off

IF "%GAT_LOCATION%X"=="X" set GAT_LOCATION=..


:: Don't touch anything below this line

set GAT_ENGINE_LOCATION=%GAT_LOCATION%\JavaGATEngine
set GAT_ADAPTOR_LOCATION=%GAT_LOCATION%\JavaGATAdaptors

set GAT_ENGINE_JAR=%GAT_ENGINE_LOCATION%\lib\GAT.jar
set GAT_ENGINE_EXTERNAL_JARS=%GAT_ENGINE_LOCATION%\external

set GAT_ADAPTORS=%GAT_ADAPTOR_LOCATION%\lib
set GAT_ADAPTOR_EXTERNAL_JARS=%GAT_ADAPTOR_LOCATION%\external

:: Create the path with the JAR files
SET GAT_CLASSPATH=

FOR %%i IN ("%GAT_ENGINE_EXTERNAL_JARS%\*.jar") DO CALL "%GAT_ENGINE_LOCATION%\bin\AddToGATClassPath.bat" %%i

set OUR_CP=%CLASSPATH%;%GAT_ENGINE_JAR%;%GAT_CLASSPATH%;%GAT_ENGINE_LOCATION%/lib/GAT-tests.jar

java -cp %OUR_CP% -Dgat.adaptor.path=%GAT_ADAPTORS%;%GAT_ADAPTOR_EXTERNAL_JARS% %*
