<project name="GAT" default="build" basedir=".">
	<description>
      Build file for GAT
    </description>
	<!-- Global properties for GAT -->
	<property name="src" location="src" />
	<property name="tmp" location="tmp" />
	<property name="lib" location="lib" />
	<property name="doc" location="doc" />
	<property name="log" location="log" />
	<property name="test" location="test" />
	<property name="examples" location="examples" />
	<property name="java.debug.value" value="true" />

	<target name="init">
		<!-- Create the time stamp -->
		<tstamp />

		<!-- Create the build directory structure used by compile -->
		<mkdir dir="${lib}" />
		<mkdir dir="${tmp}" />
		<mkdir dir="${doc}" />
		<mkdir dir="${doc}/html" />
		<mkdir dir="${doc}/html/javadoc" />
		<mkdir dir="${log}" />

		<!-- Start recording build process -->
		<record name="${log}/build.log" action="start" />
	</target>

	<target name="compile" depends="init" description="compile the source ">
		<!-- Compile the java code from ${src} into ${tmp} -->
		<javac srcdir="${src}" destdir="${tmp}" debug="on" />
	</target>

	<target name="javadoc" depends="init" description="generate javadoc">
		<javadoc destdir="${doc}/html/javadoc" access="public" packagenames="org.gridlab.*" sourcepath="${src}" overview="src/overview.html">
			<link href="http://java.sun.com/j2se/1.4.2/docs/api/" />
		</javadoc>
	</target>

    <target name="javadoc-user">
        <javadoc destdir="doc/html/javadoc" access="public" use="true" notree="false" nonavbar="false" noindex="false" splitindex="true" author="true" version="true" nodeprecatedlist="false" nodeprecated="false" packagenames="org.gridlab.gat.util,org.gridlab.gat.monitoring,org.gridlab.gat.advert,org.gridlab.gat,org.gridlab.gat.resources,org.gridlab.gat.security" sourcefiles="src/org/gridlab/gat/io/Pipe.java,src/org/gridlab/gat/io/File.java,src/org/gridlab/gat/io/RandomAccessFile.java,src/org/gridlab/gat/io/LogicalFile.java,src/org/gridlab/gat/io/FileInputStream.java,src/org/gridlab/gat/io/Endpoint.java,src/org/gridlab/gat/io/FileOutputStream.java,src/org/gridlab/gat/io/PipeListener.java" sourcepath="src:test" classpath="tmp">
            <link href="http://java.sun.com/j2se/1.4.2/docs/api/"/>
        </javadoc>
    </target>

   	<target name="dist" depends="build,javadoc" description="build the distribution">
	</target>

	<target name="engine" depends="compile" description="build the JAR file">

		<!-- Create the distribution directory -->
		<mkdir dir="${lib}" />

		<!-- Put everything in ${tmp} into the GAT.jar file -->
		<jar jarfile="${lib}/GAT.jar" basedir="${tmp}" />

		<!-- Sign the GAT.jar file 
    <signjar jar="${lib}/GAT.jar" alias="xxxxx" storepass="yyyyy" storetype="pkcs12"/>
    -->

		<!-- Stop recording build process -->
		<record name="${log}/build.log" action="stop" />
	</target>

	<target name="compile-tests" depends="init" description="compile the tests">
		<!-- Compile the java code from ${test} into ${tmp} -->
		<javac srcdir="${test}" destdir="${tmp}" />
	</target>

	<target name="compile-examples" depends="init" description="compile the examples">
		<!-- Compile the java code from ${examples} into ${tmp} -->
		<javac srcdir="${examples}" destdir="${tmp}" />
	</target>

	<target name="build" description="build everything" depends="engine,compile-tests,compile-examples">
	</target>

	<target name="clean" description="clean up">
		<delete dir="${tmp}" />
		<delete dir="${lib}" />
		<delete dir="${log}" />
		<delete file="${test}/file/test_input_copy.dat" />
	</target>

	<target name="distclean" depends="clean" description="clean up, including docs">
		<delete dir="${doc}" />
	</target>

</project>
