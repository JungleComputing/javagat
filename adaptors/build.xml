			<manifest>
				<attribute name="FileCpi-class" value="org.gridlab.gat.io.cpi.commandlineSsh.CommandlineSshFileAdaptor" />
			</manifest>
		</jar>

		<jar jarfile="${lib}/ThirdPartyCopyFileAdaptor.jar" basedir="${tmp}" includes="**/thirdPartyCopy/*.class">
			<manifest>
				<attribute name="FileCpi-class" value="org.gridlab.gat.io.cpi.thirdPartyCopy.ThirdPartyCopyFileAdaptor" />
			</manifest>
		</jar>

		<jar jarfile="${lib}/StreamingFileAdaptor.jar" basedir="${tmp}" includes="**/streaming/*.class">
			<manifest>
