		</jar>

		<jar jarfile="${lib}/HTTPFileInputStreamAdaptor.jar" basedir="${tmp}" includes="org/gridlab/gat/io/cpi/globus/**">
			<manifest>
				<attribute name="FileInputStreamCpi-class" value="org.gridlab.gat.io.cpi.globus.HTTPFileInputStreamAdaptor" />
			</manifest>
		</jar>

		<jar jarfile="${lib}/HTTPSFileInputStreamAdaptor.jar" basedir="${tmp}" includes="org/gridlab/gat/io/cpi/globus/**">
			<manifest>
				<attribute name="FileInputStreamCpi-class" value="org.gridlab.gat.io.cpi.globus.HTTPSFileInputStreamAdaptor" />
			</manifest>
		</jar>

		<jar jarfile="${lib}/SSHFileInputStreamAdaptor.jar" basedir="${tmp}" includes="org/gridlab/gat/io/cpi/ssh/**">
			<manifest>
				<attribute name="FileInputStreamCpi-class" value="org.gridlab.gat.io.cpi.ssh.SshFileInputStreamAdaptor" />
			</manifest>
		</jar>

		<jar jarfile="${lib}/SSHFileOutputStreamAdaptor.jar" basedir="${tmp}" includes="org/gridlab/gat/io/cpi/ssh/**">
			<manifest>
				<attribute name="FileOutputStreamCpi-class" value="org.gridlab.gat.io.cpi.ssh.SshFileOutputStreamAdaptor" />
			</manifest>
		</jar>

		<jar jarfile="${lib}/FTPFileOutputStreamAdaptor.jar" basedir="${tmp}" includes="org/gridlab/gat/io/cpi/globus/**">
			<manifest>
				<attribute name="FileOutputStreamCpi-class" value="org.gridlab.gat.io.cpi.globus.FTPFileOutputStreamAdaptor" />
			</manifest>
		</jar>

		<jar jarfile="${lib}/GridFTPFileOutputStreamAdaptor.jar" basedir="${tmp}" includes="org/gridlab/gat/io/cpi/globus/**,org/gridlab/gat/security/**">
			<manifest>
				<attribute name="FileOutputStreamCpi-class" value="org.gridlab.gat.io.cpi.globus.GridFTPFileOutputStreamAdaptor" />
			</manifest>
		</jar>

		<jar jarfile="${lib}/HTTPFileOutputStreamAdaptor.jar" basedir="${tmp}" includes="org/gridlab/gat/io/cpi/globus/**">
			<manifest>
				<attribute name="FileOutputStreamCpi-class" value="org.gridlab.gat.io.cpi.globus.HTTPFileOutputStreamAdaptor" />
			</manifest>
		</jar>

		<jar jarfile="${lib}/HTTPSFileOutputStreamAdaptor.jar" basedir="${tmp}" includes="org/gridlab/gat/io/cpi/globus/**">
			<manifest>
				<attribute name="FileOutputStreamCpi-class" value="org.gridlab.gat.io.cpi.globus.HTTPSFileOutputStreamAdaptor" />
			</manifest>
		</jar>

		<jar jarfile="${lib}/LocalLogicalFileAdaptor.jar" basedir="${tmp}" includes="**/LocalLogicalFileAdaptor.class">
			<manifest>
				<attribute name="LogicalFileCpi-class" value="org.gridlab.gat.io.cpi.local.LocalLogicalFileAdaptor" />
			</manifest>
		</jar>

		<jar jarfile="${lib}/LocalResourceBrokerAdaptor.jar" basedir="${tmp}" includes="org/gridlab/gat/resources/cpi/local/*.class">
			<manifest>
				<attribute name="ResourceBrokerCpi-class" value="org.gridlab.gat.resources.cpi.local.LocalResourceBrokerAdaptor" />
			</manifest>
		</jar>

		<jar jarfile="${lib}/CommandlineSshResourceBrokerAdaptor.jar" basedir="${tmp}" includes="org/gridlab/gat/resources/cpi/commandlineSsh/*.class">
			<manifest>
				<attribute name="ResourceBrokerCpi-class" value="org.gridlab.gat.resources.cpi.commandlineSsh.CommandlineSshResourceBrokerAdaptor" />
			</manifest>
		</jar>

		<jar jarfile="${lib}/CommandlineSshPrunResourceBrokerAdaptor.jar" basedir="${tmp}" includes="org/gridlab/gat/resources/cpi/commandlineSshPrun/*.class">
			<manifest>
				<attribute name="ResourceBrokerCpi-class" value="org.gridlab.gat.resources.cpi.commandlineSshPrun.CommandlineSshPrunResourceBrokerAdaptor" />
			</manifest>
		</jar>

  		<jar jarfile="${lib}/SshResourceBrokerAdaptor.jar" basedir="${tmp}" includes="org/gridlab/gat/resources/cpi/ssh/*.class">
			<manifest>
				<attribute name="ResourceBrokerCpi-class" value="org.gridlab.gat.resources.cpi.ssh.SshBrokerAdaptor" />
			</manifest>
		</jar>

		<jar jarfile="${lib}/GlobusBrokerAdaptor.jar" basedir="${tmp}" includes="**/org/gridlab/gat/resources/cpi/globus/*.class">
			<manifest>
				<attribute name="ResourceBrokerCpi-class" value="org.gridlab.gat.resources.cpi.globus.GlobusBrokerAdaptor" />
			</manifest>
		</jar>

                 <jar jarfile="${lib}/ProActiveBrokerAdaptor.jar" basedir="${tmp}" includes="**/org/gridlab/gat/resources/cpi/proactive/*.class,**/org/objectweb/proactive/GATAdaptor/*.class">
                         <manifest>
                                 <attribute name="ResourceBrokerCpi-class" value="org.gridlab.gat.resources.cpi.proactive.ProActiveBrokerAdaptor" />
                         </manifest>
                 </jar>

		<jar jarfile="${lib}/SocketEndpointAdaptor.jar" basedir="${tmp}" includes="**/org/gridlab/gat/io/cpi/sockets/*.class">
			<manifest>
				<attribute name="EndpointCpi-class" value="org.gridlab.gat.io.cpi.sockets.SocketEndpointAdaptor" />
			</manifest>
		</jar>

        <jar jarfile="${lib}/SameGATManagerAdaptor.jar" basedir="${tmp}" includes="**/org/gridlab/gat/steering/cpi/local/SameGATSteeringManagerAdaptor.class">
		<manifest>
                	<attribute name="SteeringManagerCpi-class" value="org.gridlab.gat.steering.cpi.local.SameGATSteeringManagerAdaptor" />
		</manifest>
	</jar>

        <jar jarfile="${lib}/LocalManagerAdaptor.jar" basedir="${tmp}" includes="**/org/gridlab/gat/steering/cpi/local/LocalSteeringManagerAdaptor.class">
                <manifest>
                        <attribute name="SteeringManagerCpi-class" value="org.gridlab.gat.steering.cpi.local.LocalSteeringManagerAdaptor" />
                </manifest>
        </jar>


	    	<delete dir="${tmp}"/>

		<!-- Copy external libraries to lib directory -->
		<copy todir="${lib}">
	    <fileset dir="${external}">
	    </fileset>
	    </copy>
	</target>

	<target name="clean" description="clean up">
        <delete dir="${tmp}"/>
        <delete dir="${lib}"/>
        <delete dir="${doc}/html/javadoc" />
	</target>

</project>
