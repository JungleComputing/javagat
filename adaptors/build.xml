			</manifest>
		</jar>

		<jar jarfile="${lib}/SshFileAdaptor.jar" basedir="${tmp}" includes="**/Ssh*.class,**/SSHSecurityUtils.class">
			<manifest>
				<attribute name="FileCpi-class" value="org.gridlab.gat.io.cpi.ssh.SshFileAdaptor" />
			</manifest>
		</jar>

		<jar jarfile="${lib}/SftpFileAdaptor.jar" basedir="${tmp}" includes="**/sftp/*.class">
			<manifest>
				<attribute name="FileCpi-class" value="org.gridlab.gat.io.cpi.sftp.SftpFileAdaptor" />
			</manifest>
		</jar>

		<jar jarfile="${lib}/FTPFileAdaptor.jar" basedir="${tmp}" includes="org/gridlab/gat/io/cpi/globus/**">
			<manifest>
				<attribute name="FileCpi-class" value="org.gridlab.gat.io.cpi.globus.FTPFileAdaptor" />
			</manifest>
		</jar>

		<jar jarfile="${lib}/GridFTPFileAdaptor.jar" basedir="${tmp}" includes="org/gridlab/gat/io/cpi/globus/**,org/gridlab/gat/security/**">
			<manifest>
				<attribute name="FileCpi-class" value="org.gridlab.gat.io.cpi.globus.GridFTPFileAdaptor" />
			</manifest>
		</jar>

		<jar jarfile="${lib}/CommandlineSshFileAdaptor.jar" basedir="${tmp}" includes="org/gridlab/gat/io/cpi/commandlineSsh/*.class">
			<manifest>
				<attribute name="FileCpi-class" value="org.gridlab.gat.io.cpi.commandlineSsh.CommandlineSshFileAdaptor" />
			</manifest>
		</jar>

		<jar jarfile="${lib}/FTPFileInputStreamAdaptor.jar" basedir="${tmp}" includes="org/gridlab/gat/io/cpi/globus/**">
			<manifest>
				<attribute name="FileInputStreamCpi-class" value="org.gridlab.gat.io.cpi.globus.FTPFileInputStreamAdaptor" />
			</manifest>
		</jar>

		<jar jarfile="${lib}/GridFTPFileInputStreamAdaptor.jar" basedir="${tmp}" includes="org/gridlab/gat/io/cpi/globus/**,org/gridlab/gat/security/**">
			<manifest>
				<attribute name="FileInputStreamCpi-class" value="org.gridlab.gat.io.cpi.globus.GridFTPFileInputStreamAdaptor" />
