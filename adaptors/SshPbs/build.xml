<project name="SshPbsAdaptor" default="build" basedir=".">
    <description>Build file for JavaGAT SshPbs Adaptors.</description>

    <property name="gat.location" location="../.." />
    <property name="engine_path" location="${gat.location}/lib" />

    <property name="src" location="src" />
    <property name="tmp" location="tmp" />
    <property name="lib" location="${gat.location}/lib/adaptors/SshPbsAdaptor" />
    <property name="java.debug.value" value="true" />

    <path id="external_jars">
	<fileset dir="${engine_path}">
	    <include name="*.jar" />
	</fileset>
    </path>

    <target name="build" depends="clean" description="build the JARs and documentation">
	<!-- Create the distribution and tmp directory -->
	<mkdir dir="${lib}" />
	<mkdir dir="${tmp}" />

	<!-- Compile the java code from ${src} into ${tmp} -->
	<javac source="1.5" target="1.5" srcdir="${src}" destdir="${tmp}" debug="on">
	    <classpath refid="external_jars" />
	</javac>

	<!-- create a list with necessary jar files for the classpaths manifest -->
	<jar jarfile="${lib}/SshPbsAdaptor.jar" basedir="${tmp}" includes="**">
	    <manifest>
		<attribute name="ResourceBrokerCpi-class" value="de.mpg.aei.gat.resources.cpi.sshpbs.SshPbsResourceBrokerAdaptor" />
	    </manifest>
	</jar>

	<delete dir="${tmp}" />

    </target>

    <target name="clean" description="clean up">
	<delete dir="${tmp}" />
    </target>

</project>
